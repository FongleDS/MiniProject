<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPan">

    <TextView
        android:id="@+id/menupan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:textColor="#3A3A3A"
        android:gravity="left"
        android:text="MENU"
        android:textSize="40dp"
        android:fontFamily="@font/scoredream_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/bar_iv"
            android:layout_width="120dp"
            android:layout_height="8dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/bar_iv"
            app:layout_constraintTop_toBottomOf="@id/menupan_tv"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/line_iv"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/line"
        android:layout_marginStart="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bar_iv"
        app:layout_constraintStart_toStartOf="@id/menupan_tv"
        app:layout_constraintTop_toBottomOf="@id/menupan_tv" />

    <Button
        android:id="@+id/button_pasta"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:background="@drawable/img"
        android:layout_marginTop="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/menupan_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
        <ImageView
            android:id="@+id/pasta_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pasta_iv"
            app:layout_constraintStart_toStartOf="@id/button_pasta"
            app:layout_constraintTop_toTopOf="@id/button_pasta"
            />
        <TextView
            android:id="@+id/pasta_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 파스타 \n pasta"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/scoredream_medium"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@id/pasta_iv"
            app:layout_constraintTop_toTopOf="@id/button_pasta"
            />
            <TextView
                android:id="@+id/pp_pst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="45dp"
                android:text="대기인원 :      명"
                android:fontFamily="@font/scoredream_medium"
                app:layout_constraintStart_toStartOf="@id/pasta_tv"
                app:layout_constraintTop_toTopOf="@id/button_pasta"/>

            <TextView
                android:id="@+id/text_han"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginStart="69dp"
                android:fontFamily="@font/scoredream_bold"
                android:text=""
                app:layout_constraintStart_toStartOf="@id/pp_pst"
                app:layout_constraintTop_toTopOf="@id/button_pasta"/>

        <ImageView
            android:id="@+id/pasta_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pasta_iv"
            app:layout_constraintStart_toStartOf="@id/button_pasta"
            app:layout_constraintTop_toTopOf="@id/button_pasta"
            />

    <Button
        android:id="@+id/button_gunsan"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:background="@drawable/img"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/button_pasta"
        app:layout_constraintStart_toStartOf="parent" />
