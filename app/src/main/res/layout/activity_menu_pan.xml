            android:id="@+id/text_il"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="69dp"
            android:fontFamily="@font/scoredream_bold"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/pp_gs"
            app:layout_constraintTop_toTopOf="@id/button_gunsan"/>


        <ImageView
            android:id="@+id/gunsan_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gunsan_iv"
            app:layout_constraintStart_toStartOf="@id/button_gunsan"
            app:layout_constraintTop_toTopOf="@id/button_gunsan"
