<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SelectSeat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exitButton"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|right"
            app:srcCompat="@drawable/exitbutton"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="좌석 선택"
        android:textSize="20dp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/FirstFrame"
        android:layout_width="match_parent"
        android:layout_height="431dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/seat_plan_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/seat_select_img" />

            <Button
                android:id="@+id/seat_button_1"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:background="@drawable/green_seat_sero"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="76dp" />

            <Button
                android:id="@+id/seat_button_2"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:background="@drawable/green_seat_sero"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="98dp" />

            <Button
                android:id="@+id/seat_button_2"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:background="@drawable/green_seat_sero"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="98dp" />


        </android.support.constraint.ConstraintLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/select_seat"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="좌석 선택"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>