<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SelectSeat">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="좌석 선택"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/seat_plan_iv"
        android:layout_width="410dp"
        android:layout_height="410dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/seat_select_img"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/seat_button_1"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/green_seat_sero"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/choice_button_1"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/red_seat_sero"
        app:layout_constraintTop_toTopOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/select_seat"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/round_button"
        android:text="좌석 선택"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/seat_plan_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
