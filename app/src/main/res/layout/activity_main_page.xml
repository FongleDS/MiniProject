<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/page_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="2023년 10월 02일"
            android:textColor="#B70050"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/page_date">


            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="님 환영합니다!🙌"
                android:textColor="@color/black"
                android:textSize="17dp"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/daySpinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingBottom="5dp"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@id/daySpinner">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/maxPassengerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B70050"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_scroll_view" />

        <TextView
            android:id="@+id/main_select_Seat_tv"
            android:layout_width="400dp"
            android:layout_height="145dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="#EFEFEF"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="좌석선택"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maxPassengerText"/>

        <TextView
            android:id="@+id/leftseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="현재 남은 좌석 : "
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/main_select_Seat_tv"
            app:layout_constraintTop_toTopOf="@+id/main_select_Seat_tv" />

        <Button
            android:id="@+id/button_seat"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="89dp"
            android:background="@drawable/round_btn"
            android:text="확인"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_select_Seat_tv"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/main_menu_pan_tv"
            android:layout_width="400dp"
            android:layout_height="145dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="20dp"
            android:background="#EFEFEF"
            android:gravity="center"
            android:text="메뉴판"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_select_Seat_tv" />

        <TextView
            android:id="@+id/waitingOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="현재 주문 인원 : "
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/main_select_Seat_tv"
            app:layout_constraintTop_toTopOf="@+id/main_menu_pan_tv" />

        <Button
            android:id="@+id/button_menu"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="89dp"
            android:background="@drawable/round_btn"
            android:text="View"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_menu_pan_tv"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/main_info_tv"
            android:layout_width="400dp"
            android:layout_height="145dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#EFEFEF"
            android:gravity="center"
            android:paddingBottom="35dp"
            android:text="주문정보"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_menu_pan_tv"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_info"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="89dp"
            android:background="@drawable/round_btn"
            android:text="View"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_info_tv"
            tools:ignore="TouchTargetSizeCheck" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>
